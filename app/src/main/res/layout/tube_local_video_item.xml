<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65.5dp">
    <RelativeLayout
        android:id="@+id/rl_my_music"
        android:layout_width="match_parent"
        android:background="@drawable/rect_selector"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_video_label_6060_24dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:text="@string/tube_my_video"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_music"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:alpha="0.6"
                android:text="30 SONGS"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="6dp"
            android:src="@drawable/ic_keyboard_arrow_right_60606_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="12dp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.1"
        android:background="@color/white"
        android:layout_height="1px"/>
</RelativeLayout>